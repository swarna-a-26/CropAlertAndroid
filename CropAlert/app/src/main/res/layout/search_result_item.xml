<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/cropImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/default_image"
            android:scaleType="fitXY"
            />

        <TextView android:id="@+id/itemDisease"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/cropImage"
                  android:layout_marginLeft="5dp"
                  android:textSize="20dp"
                  android:text="Cabbage Napa"/>

        <TextView android:id="@+id/itemLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignLeft="@id/itemDisease"
            android:layout_below="@id/itemDisease"
            android:text="@string/location"/>

       <TextView android:id="@+id/itemSymptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignLeft="@id/itemLocation"
            android:layout_below="@id/itemLocation"
            android:text="@string/symptoms"/>


    </RelativeLayout>

</LinearLayout>